# Kosera API - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Frontend environment variables
NEXT_PUBLIC_API_URL=http://localhost:3000

# Database Configuration
POSTGRES_DB=kosera
POSTGRES_USER=kosera
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgresql://kosera:your-secure-password@localhost:5432/kosera

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-64-char-string

# Application Configuration
NODE_ENV=development
PORT=3000

# Optional: pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@kosera.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Optional: Enable React Query DevTools in development
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Cloudinary Configuration
# Sign up at https://cloudinary.com and get these from your dashboard
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret